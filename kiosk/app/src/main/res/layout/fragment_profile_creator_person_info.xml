<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ProfileCreatorPersonInfo"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="@string/profile_creator_person_info_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="24sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/profile_creator_person_info_name_et"
            android:hint="@string/profile_creator_person_info_name_et"
            android:textSize="30sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/profile_creator_person_info_address_et"
            android:textSize="30sp"/>

</LinearLayout>