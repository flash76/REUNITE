<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessageBoardActivity"
        android:theme="@style/AppTheme">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029"
            android:fontFamily="@font/varela"
            android:id="@+id/messageBoardLogo"
            android:textSize="18sp"
            android:text="Placeholder"
            android:textColor="@android:color/background_light"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageBoardScanTagInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintVertical_bias="0.998"
            android:textAlignment="textEnd"
            android:maxLines="5"
            android:text="Scan Message"
            android:textColor="@android:color/background_light"/>



    <ScrollView
            android:layout_width="300dp"
            android:layout_height="482dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/messageBoardDate"
            app:layout_constraintVertical_bias="0.061"
            android:id="@+id/scrollView2"
            app:layout_constraintHorizontal_bias="0.494"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:text="@string/news_news_news"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/messageBoardNewsLabels"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"/>
        </LinearLayout>
    </ScrollView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageBoardTime"
            android:fontFamily="@font/varela"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/messageBoardLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.028"
            android:text="The time"
            android:textColor="@android:color/background_light"/>

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageBoardDate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/messageBoardTime"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/varela"
            android:textColor="@android:color/background_light"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/messageBoardWeatherIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.904"
            android:src="@drawable/weather_sunny"
            app:layout_constraintHorizontal_bias="0.427"/>

    <TextView
            android:text="Temp"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/messageBoardWeatherTemperature"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="152dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/varela"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="612dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintVertical_bias="0.416"
            android:textColor="@android:color/background_light"/>

</android.support.constraint.ConstraintLayout>