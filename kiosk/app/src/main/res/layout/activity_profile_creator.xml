<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileCreatorActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029"
            android:fontFamily="@font/varela"
            android:id="@+id/profileCreatorLogo"
            android:textSize="18sp"
            android:text="Placeholder"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileCreatorWelcome"
            android:fontFamily="@font/varela"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profileCreatorLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.028"
            android:text="Hello."/>

    <ImageButton
            android:src="@drawable/ic_chevron_right"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/profileCreatorForwardButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.976"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"/>

    <ImageButton
            android:src="@drawable/ic_chevron_left"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/profileCreatorBackButton"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/profileCreatorFragmentWindow"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profileCreatorWelcome"
            app:layout_constraintVertical_bias="0.392"
            app:layout_constraintEnd_toStartOf="@+id/profileCreatorForwardButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/profileCreatorBackButton"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>